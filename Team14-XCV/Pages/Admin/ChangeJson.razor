        <InputFile OnChange="@ShowUpload" class="btn btn-sm btn-primary" />
        <div class="outerbox @(validJson ? "" : "invalid")">
            <textarea class="form-control" style="white-space: pre;" rows="30" @bind="@textareas[0]"
