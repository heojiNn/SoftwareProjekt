<div class="container-fluid">
    <div class="card my-1">
        <div class="card-header text-center">
            <h3>Mitarbeiterdetailansicht von @(new String(employee.FirstName + " " + employee.LastName.Substring(0, 1) + "."))</h3>
        </div>
    </div>

    <div class="card mb-3">

        <div class="card-header">
            <h4>
                Profil
            </h4>
        </div>
        <div class="row g-0">

            <div class="col-md-4">
                <img src="\@employee.Image" alt="Profilbild" class="rounded" style="margin:1em; max-width:90%">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@(new String(employee.FirstName + " " + employee.LastName))</h5>
                    <p class="card-text" style="min-height: 20px;">
                        <pre>@employee.Description</pre>
                    </p>
                    <p class="card-text"><b>Rate Card Level: @employee.RCL</b></p>

                </div>
            </div>
        </div>
    </div>
</div>

